<?xml version="1.0" encoding="UTF-8"?>
<interface>

  <!-- 
    layout option 1:
    
      Header: kill button, search entry, menu button, min/max/close

      Main: stack pages, list store

      Footer: stack switcher

    layout option 2:

      Header: kill button, search entry, menu button, min/max/close

      Main: stack sidebar (icons), stack pages, list store

  -->

  <template class="PeekAppWin" parent="GtkApplicationWindow">
    <property name="title" translatable="yes">Peek</property>
    <property name="default-width">600</property>
    <property name="default-height">400</property>

    <child type="titlebar">
      <object class="GtkHeaderBar">
        <property name="visible">True</property>
        <property name="show_close_button">True</property>
        <property name="decoration_layout">menu:close</property>

        <child type="title">
          <object class="GtkSearchEntry" id="search_entry">
            <property name="visible">True</property>
            <property name="placeholder-text">Search active processes</property>
            <property name="width-request">250</property>
          </object>
        </child>

        <child>
          <object class="GtkMenuButton" id="header_menu_button">
            <property name="visible">True</property>
            <property name="valign">center</property>
            <property name="halign">end</property>
          
            <child>
              <object class="GtkImage">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="icon_name">open-menu-symbolic</property>
              </object>
            </child>
          </object>
          <packing>
            <property name="pack_type">end</property>
          </packing>
        </child>

      </object>
    </child>

    <!-- main content -->
    <child>
      <object class="GtkBox" id="content_box">
        <property name="visible">True</property> 
        <property name="orientation">vertical</property>

        <!-- 
          stack 
        
        -->

      </object>
    </child>

  </template>

</interface>