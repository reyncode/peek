<?xml version="1.0" encoding="UTF-8"?>
<interface>

  <!-- 
    layout option 1:
    
      Header: kill button, search entry, menu button, min/max/close

      Main: stack pages, list store

      Footer: stack switcher

    layout option 2:

      Header: kill button, search entry, menu button, min/max/close

      Main: stack sidebar (icons), stack pages, list store

  -->

  <template class="PeekAppWin" parent="GtkApplicationWindow">
    <property name="title" translatable="yes">Peek</property>
    <property name="default-width">600</property>
    <property name="default-height">400</property>

    <child type="titlebar">
      <object class="GtkHeaderBar">
        <property name="visible">True</property>
        <property name="show_close_button">True</property>
        <property name="decoration_layout">menu:close</property>

        <child type="title">
          <object class="GtkSearchEntry" id="search_entry">
            <property name="visible">True</property>
            <property name="placeholder-text">Search by name, PID, or user</property>
            <property name="width-request">250</property>
          </object>
        </child>

        <child>
          <object class="GtkMenuButton" id="header_menu_button">
            <property name="visible">True</property>
          
            <child>
              <object class="GtkImage">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="icon_name">open-menu-symbolic</property>
              </object>
            </child>
          </object>
          <packing>
            <property name="pack_type">end</property>
          </packing>
        </child>

        <child>
          <object class="GtkButton" id="process_stop_button">
            <property name="visible">True</property>
          
            <child>
              <object class="GtkImage">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="icon_name">process-stop-symbolic</property>
              </object>
            </child>
          </object>
          <packing>
            <property name="pack_type">start</property>
          </packing>
        </child>

      </object>
    </child>

    <!-- main content -->
    <child>
      <object class="GtkBox">
        <property name="visible">True</property> 
        <property name="orientation">vertical</property> 

        <!-- process view -->
        <child>
          <object class="GtkScrolledWindow">
            <property name="visible">True</property> 
            <property name="shadow-type">GTK_SHADOW_ETCHED_IN</property> 
            <property name="vscrollbar-policy">GTK_POLICY_AUTOMATIC</property> 
            <property name="expand">True</property> 

            <child>
              <object class="PeekTreeView">
              <property name="visible">True</property> 

              </object>
            </child>

          </object>
        </child>

      </object>
    </child>

  </template>

</interface>